#inciar docker swarm
docker swarm init

#listar nodes del cluste
docker node ls


#crear un servicio y hacer deploy con un yml
docker stack deploy -c docker-compose.yml servicio-web



#Para verificar el estado del servicio y asegurarte de que est√° funcionando
docker service ls

